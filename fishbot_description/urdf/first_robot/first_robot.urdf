<?xml version="1.0"?>
<robot name="first_robot">
    <!-- 机器人的身体部分：注释ctrl+/ -->
    <link name="base_link">
        <!-- 部件的外观描述 -->
        <visual>
            <!-- 世界坐标系：沿着自己几何中心的偏移量和旋转量 -->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <!-- 几何形状 -->
            <geometry>
            <!-- 圆柱体：半径-0.10m  高度-0.12m -->
                <cylinder radius="0.10" length="0.12"/>
            </geometry>
            <material name="white">
            <!-- 材质颜色：白色 a-透明度 -->
                <color rgba="1.0 1.0 1.0 0.5"/>
            </material>
        </visual>
    </link>

    <!-- 机器人的IMU部件：惯性测量传感器 -->
        <link name="imu_link">
        <!-- 部件的外观描述 -->
        <visual>
            <!-- 沿着自己几何中心的偏移量和旋转量 -->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <!-- 几何形状 -->
            <geometry>
            <!-- 正方体：变长0.02m -->
                <box size="0.02 0.02 0.02"/>
            </geometry>
            <material name="black">
            <!-- 材质颜色：黑色 a-透明度 -->
                <color rgba="0.0 0.0 0.0 0.5"/>
            </material>
        </visual>
    </link>

    <!-- 机器人的关节：组合机器人的各个部件 -->
    <joint name="imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <origin xyz="0.0 0.0 0.003" rpy="0.0 0.0 0.0"/>
    </joint>
    
</robot>
